<%= form_for(@tramo, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @tramo.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4>No se pudo guardar el formulario, tiene los siguientes errores:</h4>

      <ul>
      <% @tramo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :persona_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :persona_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :localidad_origen_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :localidad_origen_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :localidad_destino_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :localidad_destino_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :empresa_transporte_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :empresa_transporte_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lunes_cant, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :lunes_cant, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :martes_cant, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :martes_cant, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :miercoles_cant, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :miercoles_cant, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :jueves_cant, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :jueves_cant, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :viernes_cant, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :viernes_cant, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sabado_cant, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :sabado_cant, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :domingo_cant, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :domingo_cant, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">

      <%= f.submit :class => "btn btn-primary", :value => "Guardar" %>
      <%= link_to tramos_path, :class => 'btn btn-default' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Atr√°s
      <% end %>
    </div>
  </div>
<% end %>
