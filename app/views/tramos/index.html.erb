<div class="page-header">
  <%= link_to new_tramo_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Tramo
  <% end %>
  <h1>Listado de tramos</h1>
</div>

<div class="table-responsive">
  <table id="tabla-tramo" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Persona</th>
            <th>Localidad origen</th>
            <th>Localidad destino</th>
            <th>Empresa transporte</th>
            <th>Lunes cant</th>
            <th>Martes cant</th>
            <th>Miercoles cant</th>
            <th>Jueves cant</th>
            <th>Viernes cant</th>
            <th>Sabado cant</th>
            <th>Domingo cant</th>
            <th class="text-center">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tramos) do |tramo| %>
            <td><%= tramo.persona_id %></td>
            <td><%= tramo.localidad_origen_id %></td>
            <td><%= tramo.localidad_destino_id %></td>
            <td><%= tramo.empresa_transporte_id %></td>
            <td><%= tramo.lunes_cant %></td>
            <td><%= tramo.martes_cant %></td>
            <td><%= tramo.miercoles_cant %></td>
            <td><%= tramo.jueves_cant %></td>
            <td><%= tramo.viernes_cant %></td>
            <td><%= tramo.sabado_cant %></td>
            <td><%= tramo.domingo_cant %></td>
            <td class="text-center">
          <div class="btn-group">
            <a class="btn dropdown-toggle btn-primary" data-toggle="dropdown" href="#">
              Acciones
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Ver', tramo %></li>
              <li><%= link_to 'Editar', edit_tramo_path(tramo) %></li>
              <li><%= link_to 'Eliminar', tramo, method: :delete, data: { confirm: 'Â¿Seguro desea eliminar?' } %></li>
              </li>
            </ul>
          </div>
        </td>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
    $(document).ready(function($) {
      var cantidad = $("table > tbody").find("> tr:first > td").length - 1;
      var pepe = $('#tabla-tramo').dataTable({
        "sPaginationType": "bootstrap",
        "aoColumnDefs": [
          { "bSearchable": false, "aTargets": [ cantidad ] }
        ],
        "oLanguage": {
              "sUrl": "language.es.json",
          },
        "aaSorting": [[ 0, "desc" ]],
      });
    });
</script>