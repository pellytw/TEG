<div class="page-header">
  <%= link_to new_establecimiento_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Establecimiento
  <% end %>
  <h1>Listado de establecimientos</h1>
</div>

<div class="table-responsive">
  <table id="tabla-establecimiento" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Codigo jurisdiccional</th>
            <th>Cue</th>
            <th>Anexo</th>
            <th>Cue anexo</th>
            <th>Sector</th>
            <th>Ambito</th>
            <th>Nombre</th>
            <th>Localidad</th>
            <th>Domicilio</th>
            <th class="text-center">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @establecimientos) do |establecimiento| %>
            <td><%= establecimiento.codigo_jurisdiccional %></td>
            <td><%= establecimiento.cue %></td>
            <td><%= establecimiento.anexo %></td>
            <td><%= establecimiento.cue_anexo %></td>
            <td><%= establecimiento.sector %></td>
            <td><%= establecimiento.ambito %></td>
            <td><%= establecimiento.nombre %></td>
            <td><%= establecimiento.localidad_id %></td>
            <td><%= establecimiento.domicilio %></td>
            <td class="text-center">
          <div class="btn-group">
            <a class="btn dropdown-toggle btn-primary" data-toggle="dropdown" href="#">
              Acciones
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Ver', establecimiento %></li>
              <li><%= link_to 'Editar', edit_establecimiento_path(establecimiento) %></li>
              <li><%= link_to 'Eliminar', establecimiento, method: :delete, data: { confirm: 'Â¿Seguro desea eliminar?' } %></li>
              </li>
            </ul>
          </div>
        </td>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
    $(document).ready(function($) {
      var cantidad = $("table > tbody").find("> tr:first > td").length - 1;
      var pepe = $('#tabla-establecimiento').dataTable({
        "sPaginationType": "bootstrap",
        "aoColumnDefs": [
          { "bSearchable": false, "aTargets": [ cantidad ] }
        ],
        "oLanguage": {
              "sUrl": "language.es.json",
          },
        "aaSorting": [[ 0, "desc" ]],
      });
    });
</script>