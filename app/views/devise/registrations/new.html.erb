<style type="text/css">
.form-control { margin-bottom: 10px; }
.form-signup
{
    margin-top: 20px;
}

</style>

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 well well-sm text-center form-signup">
        	<br/>
            <legend></a> Registrarse</legend>
            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
      			<%= f.email_field :email, :placeholder => "Correo Electrónico", :class => "form-control" %>
      			<%= f.password_field :password, :placeholder => "Contraseña", :class => "form-control" %>
      			<%= f.password_field :password_confirmation, :placeholder => "Confirmar Contraseña", :class => "form-control" %>
                <br />
                <%= f.submit "Registrarse", :class => "btn btn-lg btn-primary btn-block" %>
            <% end %>
        </div>
    </div>
</div>
